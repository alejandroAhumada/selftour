<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/colorLogoSelfTour"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="Cambio de Contraseña"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold">

        <requestFocus />
    </TextView>

    <RelativeLayout
        android:id="@+id/contenedorTextos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/ContraseñaActual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña Actual"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/ContraseñaNueva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ContraseñaActual"
                android:hint="Contraseña Nueva"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/ConfirmarNuevaContraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ContraseñaNueva"
                android:hint="Confirmar Nueva Contraseña"
                android:textAlignment="center" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contenedorTextos"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/save"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorLogoSelfTour"
            android:text="SAVE" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#4b5356"
            android:onClick="onClickCancel"
            android:text="Cancel" />

    </LinearLayout>
</RelativeLayout>