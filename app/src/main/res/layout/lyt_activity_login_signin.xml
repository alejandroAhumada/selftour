<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="cl.selftourhamburger.Activity.Activity_Login_Signin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo_login_signin"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/logo_self_tour2" />

        <RelativeLayout
            android:id="@+id/carousel"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/logo_login_signin">

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:fillColor="#FFFFFFFF"
                app:pageColor="#00000000"
                app:radius="6dp"
                app:slideInterval="3000"
                app:strokeColor="@color/colorLogoSelfTour"
                app:strokeWidth="1dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lyt_btns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/carousel">

            <Button
                android:id="@+id/entrar_login"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:onClick="onClickLogin"
                android:text="Login"
                android:background="@drawable/buttonshape"/>

            <Button
                android:id="@+id/entrar_registrarse"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:onClick="onClickRegistrarse"
                android:text="Registrarse"
                android:background="@drawable/buttonshape"/>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
