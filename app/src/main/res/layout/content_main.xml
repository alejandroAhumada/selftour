<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.Activity_Pantalla_Principal"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        android:id="@+id/lyt_btns"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#f0f0f0">

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp">

            <Button
                android:id="@+id/boton1"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@drawable/buttonshape_local" />

            <Button
                android:id="@+id/boton2"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_below="@id/boton1"
                android:layout_marginTop="5dp"
                android:background="@drawable/buttonshape_local" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp">

            <Button
                android:id="@+id/boton3"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@drawable/buttonshape_local" />

            <Button
                android:id="@+id/boton4"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_below="@id/boton3"
                android:layout_marginTop="5dp"
                android:background="@drawable/buttonshape_local" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_below="@+id/lyt_btns"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cajon_del_maipo" />


    </RelativeLayout>


</RelativeLayout>
